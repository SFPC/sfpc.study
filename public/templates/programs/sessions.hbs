<body>
  {{> header}}
  {{> footer}}

  <div class="crt-overlay crt-overlay-fullsize"></div>


  <div id="shell" class="shell shell-fullsize projects sfpc">


    <div class="loader-content">
      <p tabindex="0" class="large">
        loading<span>...</span>
      </p>
    </div>


    <div class="selectors">
      <select id="allSections" onchange="sectionJump(this.value)" class=" hide-content">
        <option value="/participate">All Programs</option>
        <option value="/classes">Classes</option>
        <option value="/sessions" selected>Sessions</option>
        <option value="/events">Events</option>
      </select>

      <!-- <select id="allSections" onchange="sectionJump(this.value)" class=" hide-content">
        <option value="">Jump to section...</option>
        <option value="current">Current & Upcoming</option>

        <option value="2022">2022</option>
        <option value="2021">2021</option>
        <option value="2020">2020</option>
      </select> -->
    </div>


    <h4 class="breadcrumb  hide-content"><a href="">participate</a></h4>



    <div id="projects" class="shell-content hide-content allProjects projectsDiv">

      <section>
        <div class="grid-2">
          <h1>All Sessions</h1>
        </div>

        <div class="grid-2">


        </div>
      </section>

      <div class="break-noline"></div>

      <section id="section-projects" class="stacked stacked-4">

        <div class="grid-1 participate">

          {{#each projects}}


          <div id="{{this.[Website-Slug]}}"
            class="grid-4 featured session {{this.[Website-Slug]}}" data-location="
            ">
            <div class="featured-text">
              <img src="{{this.[Thumbnail Image]}}">
              <div class="top">
                <h4 class="type type-list-comma"><a href="{{#if this.[External-Website]}}{{this.[External-Website]}}{{else}}/sessions/{{this.[Website-Slug]}}{{/if}}">session</a></h4>
                <h2 class="title">{{this.Name}}</h2>
                <!-- <h6>{{this.[Short Description]}}</h6> -->
              </div>
              <div class="bottom">
                <h4 class="details">
                  {{this.[Dates].start}}
                  {{#if [Dates].end}}â€” {{[Dates].end}}{{/if}}
                </h4>
                {{#if Location}}
                <h4 class="details">
                  {{this.[Location]}}
                </h4>
                {{/if}}
                {{#if this.[Number-Classes]}}
                <h4 class="details">
                  {{this.[Number-Classes]}} classes
                </h4>
                {{/if}}
                {{#if this.[Application Status]}}
                <h4 class="details">
                 {{this.[Application Status]}}
                </h4>
                  {{/if}}

                 </div>
            </div>
          </div>


          {{/each}}

        </div>



      </section>


      <!-- <div class="break"></div> -->











      <div class="break-noline"></div>


      <section id="section-outro">
        <p tabindex="0" class="large">
          We are still working on archiving all our past programs. View our past programs <a
            href="https://sfpc.io/participate/">here</a> and <a href="https://sfpc.io/classes/">here</a>.
          <BR><BR>
          Interested in more learning opportunities at the School for Poetic Computation?
          Join our <a href="https://stats.sender.net/forms/e09QVa/view">newsletter</a> to stay up to date on future
          sessions and events, and
          follow us on <a href="https://instagram.com/sfpc_nyc">Instagram</a> and <a
            href="https://twitter.com/sfpc">Twitter</a>.
          Support our programming through <a
            href="https://withfriends.co/school_for_poetic_computation/join">scholarships</a>.
          Get in touch over <a href="mailto:info@sfpc.study">email</a>.
        </p>
      </section>


      <div class="break-endpage"></div>




    </div>
  </div>










  <script src="/outside.js"></script>
  <script src="/carousel.js"></script>
  </p>

